{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"] // This maps the alias "@" to the "src" directory
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "types.d.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
